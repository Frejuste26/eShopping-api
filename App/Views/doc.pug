doctype html
html(class='h-full bg-gray-100')
    head
        meta(charset='UTF-8')
        title eShopping API Documentation
        script(src='/Js/tailwindcss.js')
    body(class='h-full') 
        div(class='min-h-full')
            header(class='bg-indigo-600 shadow') 
                nav(class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8')
                    div(class='flex items-center justify-between h-16')
                        div(class='flex items-center')
                            div(class='flex-shrink-0')
                                h1(class='text-2xl font-bold text-white') eShopping API Docs
            main
                div(class='max-w-7xl mx-auto py-6 sm:px-6 lg:px-8')
                    //- Section pour lister les produits (GET /api/products)
                    div(class='bg-white shadow sm:rounded-lg mb-6')
                        div(class='px-4 py-5 sm:p-6')
                            h3(class='text-lg leading-6 font-medium text-gray-900') Lister les Produits
                            div(class='mt-2 max-w-xl text-sm text-gray-500')
                                p Récupère la liste de tous les produits disponibles.
                            div(class='mt-5')
                                div(class='flex items-center space-x-3 mb-3')
                                    span(class='inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800') GET
                                    code(class='text-sm text-gray-700 bg-gray-100 px-2 py-1 rounded') /api/v1/products
                                button(id='listProductsBtn' class='inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500') Envoyer la requête
                                div(id='listProductsResponse' class='mt-3 p-3 bg-gray-50 rounded-md hidden')
                                    h4(class='text-sm font-medium text-gray-700') Réponse:
                                    pre(class='text-xs text-gray-600 whitespace-pre-wrap break-all')

                    //- Section pour créer un produit (POST /api/products)
                    div(class='bg-white shadow sm:rounded-lg mb-6')
                        div(class='px-4 py-5 sm:p-6')
                            h3(class='text-lg leading-6 font-medium text-gray-900') Créer un Produit
                            div(class='mt-2 max-w-xl text-sm text-gray-500')
                                p Crée un nouveau produit.
                            div(class='mt-5')
                                div(class='flex items-center space-x-3 mb-3')
                                    span(class='inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800') POST
                                    code(class='text-sm text-gray-700 bg-gray-100 px-2 py-1 rounded') /api/v1/products
                                div(class='grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6 mb-3')
                                    div(class='sm:col-span-3')
                                        label(for='productName' class='block text-sm font-medium text-gray-700') Nom du produit
                                        div(class='mt-1')
                                            input(type='text' name='productName' id='productName' class='shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' placeholder='Ex: Super Chaussures')
                                    div(class='sm:col-span-3')
                                        label(for='productPrice' class='block text-sm font-medium text-gray-700') Prix
                                        div(class='mt-1')
                                            input(type='number' name='productPrice' id='productPrice' class='shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' placeholder='Ex: 99.99')
                                    div(class='sm:col-span-6')
                                        label(for='productDescription' class='block text-sm font-medium text-gray-700') Description
                                        div(class='mt-1')
                                            textarea(id='productDescription' name='productDescription' rows='3' class='shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md' placeholder='Description détaillée du produit...')
                                
                                button(id='createProductBtn' class='inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500') Envoyer la requête
                                div(id='createProductResponse' class='mt-3 p-3 bg-gray-50 rounded-md hidden')
                                    h4(class='text-sm font-medium text-gray-700') Réponse:
                                    pre(class='text-xs text-gray-600 whitespace-pre-wrap break-all')

        script(src="/Js/doc.js")
            